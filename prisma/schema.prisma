  id               String  @id @default(cuid())
  nome             String
  atendimento      Boolean @default(true)
  tipo             String
  caixaId          String
  caixa            Caixa   @relation(fields: [caixaId], references: [id])
  capilarEntradaId String?
  capilarSaida     Capilar[] 
