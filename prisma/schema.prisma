model Cliente {
  id           String        @id @default(cuid())
  nome         String
  email        String?        @unique
  senha        String?
  telefone     String?
  cpf          String?
  apartamento  String?
  endereco     String?
  casa         String?
  numero       Int
  potencia     Float?
  wifi         String?
  senhaWifi    String?
  neutraId     String?
  cidadeId     String?
  caixaId      String?  
  caixa        Caixa?        @relation(fields: [caixaId], references: [id])
  cidade       Cidade?       @relation(fields: [cidadeId], references: [id])
  neutra       Neutra?        @relation(fields: [neutraId], references: [id])
  portaId      String?
  porta        Porta?
